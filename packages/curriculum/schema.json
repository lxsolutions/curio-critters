
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "K-3 Math Curriculum Schema",
  "type": "object",
  "properties": {
    "grade_band": {
      "type": "string",
      "enum": ["K-3", "K-1", "1-2", "2-3"]
    },
    "domain": {
      "type": "string",
      "enum": ["arithmetic", "number-sense", "measurement", "geometry"]
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": ["id", "label"]
      }
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["add", "sub"]
          },
          "a": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0
            }
          },
          "b": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": 0
            }
          },
          "constraints": {
            "type": "object",
            "properties": {
              "excludeCarry": {
                "type": "boolean"
              },
              "maxSum": {
                "type": "integer"
              },
              "minSum": {
                "type": "integer"
              }
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "difficulty": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
          }
        },
        "required": ["id", "type", "a", "b"]
      }
    }
  },
  "required": ["grade_band", "domain", "items"]
}
